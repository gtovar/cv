<!-- Clients Section -->
<section id="clients" class="clients parallax" style="background-image: url(assets/clients.png)">
<div class="parallax-overlay">
  <div class="container">
    <div class="row">
      <!-- Section title -->
      <div class="section-title item_bottom text-center">
        <div>
          <span class="fa fa-users fa-2x"></span>
        </div>
        <h1 class="white"><span><%= t :tools %></span></h1>
      </div>
      <!-- End Section title -->
    </div>

    <div class="row item_bottom">

      <h4 class="white"><strong><%= t :favorites_tools %></strong></h4>

      <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">

        <div class="swiper-testimonial">

          <div class="swiper-wrapper">

            <!-- HEROKU -->
            <div class="swiper-slide"> 
              <p class="author">HEROKU</p>
              <p class="quote">
              <%= raw t :heroku_quote %>
              </p>
              <p class="company"><%= raw t :heroku_company %> </p>
            </div>

            <!-- Amazon  -->
            <div class="swiper-slide">
              <p class="author">
                Amazon
              </p>
              <p class="quote">
              <%= t :amazon_quote %>
              </p>
              <p class="company">
              <%= t :amazon_company %>
              </p>
            </div>

            <!-- Github -->
            <div class="swiper-slide"> 
              <p class="author">GIT</p>
              <p class="quote">
              <%= t :git_quote %>
              </p>
              <p class="company">"<%= raw t :git_company %>"</p>	  	
            </div>

            <!-- Digital Ocean -->
            <div class="swiper-slide"> 
              <p class="author">Digital Ocean</p>
              <p class="quote">
              <%= t :digital_ocean_quote %>
              </p>
              <p class="company">"<%= raw t :digital_ocean_company %>"</p>	  	
            </div>

          </div><!--/ .swiper-wrapper -->
          <div class="pagination-testimonial"></div> <!--/ swiper slider pagination -->
        </div><!--/ .swiper-testimonial -->
      </div>

    </div> <!--/ .row -->

    <div class="row new-line item_fade_in">
      <h4 class="white">Some of <strong>my clients</strong></h4>
      <div class="carrousel-container">
        <div id="left_scroll"><a href=""></a></div>
        <div id="carousel_inner">
          <ul class="clearfix" id="carousel_ul">
            <li><span><%= image_tag "clients/tmux.png",alt: "Jquery" %></span></li>
            <li><span><%= image_tag "clients/vim.png",alt: "Vim" %></span></li>
            <li><span><%= image_tag "clients/jquery.png",alt: "Jquery" %></span></li>
            <li><span><%= image_tag "clients/sendgrid.png",alt: "Sendgrid" %></span></li>
            <li><span><%= image_tag "clients/vagrant.png",alt: "Vagrant" %></span></li>
            <li><span><%= image_tag "clients/newrelic.png",alt: "NewRelic" %></span></li>
            <li><span><%= image_tag "clients/heroku.png",alt: "Heroku" %></span></li>
            <li><span><%= image_tag "clients/postgresql.png",alt: "Postgresql" %></span></li>
            <li><span><%= image_tag "clients/digitalocean.png",alt: "Digital Ocean" %></span></li>
            <li><span><%= image_tag "clients/amazonS3.png",alt: "Simple Stroge Save" %></span></li>
            <li><span><%= image_tag "clients/spreecommerce.png",alt: "Spree" %></span></li>
            <li><span><%= image_tag "clients/gitlogo.png",alt: "Git" %></span></li>
            <li><span><%= image_tag "clients/bootstrap.png",alt: "bootstrap" %></span></li>
            <li><span><%= image_tag "clients/cacoo.png",alt: "Cacoo" %></span></li>
            <li><span><%= image_tag "clients/coffeescript.png",alt: "Spree" %></span></li>

            <li><span><%= image_tag "clients/mailchimp.png", alt: "mailchimp" %></span></li>
          </ul>
        </div>
        <div id="right_scroll"><a href=""></a></div>
        <input type="hidden" id="hidden_auto_slide_seconds" value=0 />
      </div>
    </div>
  </div>
</div>
</section>
<!-- End Clients Section -->
